[
    {
      "type": 1,
      "title": "Pi-Hole",
      "name": "pihole",
      "description": "A Linux network-level advertisement and Internet tracker blocking application which acts as a DNS sinkhole.",
      "logo": "https://raw.githubusercontent.com/OldDroid/yacht_templates/main/Images/pihole.png",
      "image": "pihole/pihole:latest",
      "categories": [
        "Other",
        "Tools"
      ],
      "platform": "linux",
      "restart_policy": "unless-stopped",
      "ports": [
        {
          "DNS TCP": "53:53/tcp",
          "DNS UDP": "53:53/udp",
          "DHCP": "67:67/udp",
          "WebUI": "80:80/tcp",
          "HTTPS WebUI": "443:443/tcp"
        }
      ],
      "volumes": [
        {
          "container": "/etc/pihole",
          "bind": "!config/PiHole"
        },
        {
          "container": "/etc/dnsmasq.d",
          "bind": "!config/PiHole/DNS"
        }
      ],
      "note": "Follow the article <a href='https://medium.com/@niktrix/getting-rid-of-systemd-resolved-consuming-port-53-605f0234f32f'>here</a> if you run into issues binding to port 53."
    },
]
